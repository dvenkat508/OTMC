<Window x:Class="OTMC.Dialog_Boxes.Incorrect_Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OTMC.Dialog_Boxes"
        mc:Ignorable="d" WindowStyle="None"
        Title="Incorrect_Details" WindowStartupLocation="CenterScreen" Name="Dialog"
        Height="150" Width="250" Background="WhiteSmoke">
    <Grid>
        <Grid VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Incorrect Password" HorizontalAlignment="Center" FontSize="20" FontFamily="Bahnschrift Light"/>
                <TextBlock Text="or Email" HorizontalAlignment="Center" FontSize="20" FontFamily="Bahnschrift Light"/>
                <Rectangle Fill="Transparent" Height="10" VerticalAlignment="Stretch"/>
                <Button Content="Close" HorizontalAlignment="Center" Width="100" Height="35" Foreground="White" Background="#FF2D89EF" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
