<UserControl x:Class="OTMC.Pages.MessageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OTMC.Pages"
             mc:Ignorable="d" >
    <Grid Margin="10,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border CornerRadius="10" Name="border" Padding="15" Background="White" HorizontalAlignment="Left">

            <!-- Message text -->
            <TextBlock VerticalAlignment="Center" Name="message" TextWrapping="Wrap" Text=""/>

        </Border>
        <Path Grid.Row="1" Name="anchor" Stroke="Black" Panel.ZIndex="1" Margin="5 -1 15 0" Data="M 1,0 L 10,10 L 19,0 L 0,0"  StrokeThickness="0" Fill="White" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
